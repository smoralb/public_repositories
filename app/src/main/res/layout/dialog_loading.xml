<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ProgressBar
        android:id="@+id/pb_loader"
        android:layout_width="@dimen/dimen_l"
        android:layout_height="@dimen/dimen_s"
        android:indeterminateTint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/lbl_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_s"
        android:text="@string/loading"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_dimen_l"
        app:layout_constraintLeft_toLeftOf="@id/pb_loader"
        app:layout_constraintRight_toRightOf="@id/pb_loader"
        app:layout_constraintTop_toBottomOf="@id/pb_loader" />

</android.support.constraint.ConstraintLayout>